unicloud.projektstudencki.pl {
    tls /etc/ssl/certs/unicloud.crt /etc/ssl/private/unicloud.key

    route /api* {
        reverse_proxy 127.0.0.1:8080 {
            header_up *
        }
    }

    route /restart-webhook* {
        reverse_proxy 127.0.0.1:3001
    }

    handle /mailhog {
        redir http://unicloud.projektstudencki.pl:8025 permanent
    }

    reverse_proxy 127.0.0.1:3000
    log
}